<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="@drawable/fondo">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="REGISTER"
        android:letterSpacing="0.1"
        android:textColor="#406DE1"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Apellidos y Nombres:"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtNombreRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:hint="Ingrese Apellido y Nombres"
        android:inputType="text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Correo Electronico:"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtCorreoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:hint="Ingrese Correo Electronico"
        android:inputType="text"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Télefono:"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txttelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:hint="Ingresar télefono"
        android:inputType="number"
        android:maxLength="9"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Contraseña:"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/txtPassRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        android:hint="Ingresar contraseña"
        android:inputType="numberPassword"
        android:layout_marginTop="10dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_margin="40dp">

        <Button
            android:id="@+id/btnRegistar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#ca79ca"/>

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#ca79ca"/>

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#ca79ca"/>
    </GridLayout>

</LinearLayout>