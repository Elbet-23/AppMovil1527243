<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="159dp"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icono" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:shadowColor="@color/black"
        android:text="LOGIN"
        android:textColor="#406DE1"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        />

    <EditText
        android:id="@+id/txtEmaillogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@senati.pe"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        />

    <EditText
        android:id="@+id/txtPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese contraseÃ±a"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:id="@+id/lblresetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foget your password"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:textColor="#406DE1"
        android:fontFamily="sans-serif-black"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:backgroundTint="#ffb9ff"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/lblRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have acount... create"
        android:layout_gravity="end"
        android:layout_marginEnd="55dp"
        android:textColor="#406DE1"
        android:textSize="12sp"
        android:clickable="true"
        />


</LinearLayout>